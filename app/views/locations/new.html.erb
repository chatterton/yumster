<h2>Add a location<br><small>Move map to position pushpin</small></h2>
<% if @location.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <ul>
        <% @location.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= gmaps(@g4r_options) %>
<div style="display: none;">
  <%= image_tag 'red-pushpin.png', :id => 'pushpin_img' %>
</div>

<br>
<%= form_for(@location) do |f| %>
  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>
  <%= f.label :category %>
  <%= f.select(:category, Location::CATEGORIES) %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br />
  <%= f.submit "Create location", class: "btn btn-large btn-primary" %>
<% end %>

<% content_for :scripts do %>
  <script type="text/javascript" charset="utf-8">

var center_changed = function() {
  lctn = Gmaps.map.map.getCenter()
  window.Yumster.Locations.current_location(lctn.lat(), lctn.lng())
}

Gmaps.map.callback = function() {
  var control = document.createElement('div')
  $(control).append($('#pushpin_img'))
  Gmaps.map.map.controls[google.maps.ControlPosition.TOP_CENTER].push(control)
  google.maps.event.addListener(Gmaps.map.map, 'center_changed', center_changed)
}

  </script>
<% end %>
